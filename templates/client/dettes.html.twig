{% extends 'base.html.twig' %}

{% block main %}
<div class="container mb-5">
    <div class="card mt-5">
        <div class="card-header">Liste des dettes de {{client.surname}}</div>
        <div class="card-body">
                 {{ form_start(form) }}
<div style="display: flex; align-items: center;">
    <label for="{{ form.statut.vars.id }}" style="margin-bottom: 0; margin-right: 5px;">Statut</label>
    {{ form_widget(form.statut, {'attr': {'style': 'width: 200px; margin-top: 0; margin-bottom: 10px;'}}) }}
</div>
{{ form_end(form) }}



                    <script>
    document.addEventListener('DOMContentLoaded', function () {
        const selectElement = document.querySelector('select[name="dette_filter[statut]"]'); 
        selectElement.addEventListener('change', function () {
            this.form.submit(); 
        });
    });
</script>
            <!-- Table des dettes -->
            <div class="table-responsive">
                <table class="table table-light table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Total dus</th>
                            <th scope="col">Montant</th>
                            <th scope="col">Montant verse</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                {% for dette in dettes %}
                            <tr>
                            <td>{{dette.montant-dette.montantVerse}}</td>
                            <td>{{dette.montant}}</td>
                            <td>{{dette.montantVerse}}</td>
                            <td>{{dette.date.format('Y-m-d')}}</td>
                            <td>
                                <a class="btn btn-primary py-1" href="#" role="button">
                                    modifier
                                </a>
                            </td>
                        </tr>
                        {% else %}
                           Aucune dette
                        {% endfor %}
                       
                    </tbody>
                </table>
            </div>
            
            <!-- Bouton pour ajouter un client -->
            <div class="row my-2 d-flex justify-content-end">
                <a href="{{path('client.create')}}" class="btn btn-outline-primary col-1">Cr√©er</a>
            </div>
            
        </div>
           <nav aria-label="Page navigation" class="mt-2">
                    <ul
                        class="pagination float-start   "
                    >
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
    </div>
</div>

{% endblock %}
