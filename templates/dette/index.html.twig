{% extends 'base.html.twig' %}

{% block main %}
<div class="container mb-5">
    <div class="card mt-5">
        <div class="card-header"></div>
        <div class="card-body"
                 {# dette_filter.html.twig #}
                        <form method="POST" action="{{ path('dette.index') }}" class="form-inline">
            {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.filtrer, {'attr': {'class': 'btn btn-dark'}}) }}
            <input type="hidden" name="_token" value="{{ csrf_token('dette_filter') }}">
        </form>

            <!-- Table des dettes -->
            <div class="table-responsive">
                <table class="table table-lwhite table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Total dus</th>
                            <th scope="col">Montant</th>
                            <th scope="col">Montant verse</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                {% for dette in dettes %}
                            <tr>
                            <td>{{dette.montant-dette.montantVerse}} XOF</td>
                            <td>{{dette.montant}} XOF</td>
                            <td>{{dette.montantVerse}} XOF</td>
                            <td>{{dette.date.format('Y-m-d')}}</td>
                          <td>
                                <a class="btn btn-outline-primary" href="#" role="button">
                                    Modifier
                                </a>
                               <a href="#" >
                                           supprimer
                                        </a>
                            </td>


                        </tr>
                        {% else %}
                           Aucune dette
                       {% endfor %}
                       
                    </tbody>
                </table>
            </div>
            
            <!-- Bouton pour ajouter un client -->
            <div class="row my-2 d-flex justify-content-end">
                <a href="#" class="btn btn-primary col-1">Cr√©er</a>
            </div>
            
        </div>
           <nav aria-label="Page navigation" class="mt-2">
                    <ul
                        class="pagination float-start   "
                    >
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
    </div>
</div>

{% endblock %}
